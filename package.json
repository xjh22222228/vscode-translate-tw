{
	"name": "translate-tw",
	"displayName": "translate-tw",
	"description": "简体中文转换繁体中文",
	"version": "0.2.0",
	"publisher": "xjh22222228",
	"license": "MIT",
	"engines": {
		"vscode": "^1.58.0"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/xjh22222228/vscode-translate-tw.git"
	},
	"icon": "icon.png",
	"categories": [
		"Other"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"keybindings": [{
			"command": "extension.getSelectedText",
			"key": "ctrl+s",
			"mac": "cmd+s",
			"when": "editorTextFocus"
    }],
		"commands": [
			{
				"command": "vscode-translate-tw",
				"title": "将当前文件转换为繁体"
			},
			{
				"key": "ctrl+alt+h",
				"command": "extension.getSelectedText",
				"title": "将当前选中转换为繁体"
			}
		],
		"menus": {
			"editor/context": [
				{
					"command": "vscode-translate-tw",
					"group": "z_commands",
					"when": "editorFocus"
				},
				{
					"command": "extension.getSelectedText",
					"group": "z_commands",
					"when": "editorFocus"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "yarn run package",
		"compile": "webpack",
		"watch": "webpack --watch",
		"package": "webpack --mode production --devtool hidden-source-map",
		"test-compile": "tsc -p ./",
		"test-watch": "tsc -watch -p ./",
		"pretest": "yarn run test-compile && yarn run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js",
		"build": "vsce package"
	},
	"devDependencies": {
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.2.2",
		"@types/node": "14.x",
		"@types/vscode": "^1.58.0",
		"@typescript-eslint/eslint-plugin": "^4.26.0",
		"@typescript-eslint/parser": "^4.26.0",
		"eslint": "^7.27.0",
		"glob": "^7.1.7",
		"mocha": "^8.4.0",
		"ts-loader": "^9.2.2",
		"typescript": "^4.3.2",
		"vscode-test": "^1.5.2",
		"webpack": "^5.38.1",
		"webpack-cli": "^4.7.0"
	},
	"dependencies": {
		"global": "^4.4.0",
		"vsce": "^2.15.0"
	}
}
